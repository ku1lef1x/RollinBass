<?xml version="1.0" encoding="utf-8"?>
<!-- backgroud para hacer boton redondeado
        shape: elegir la forma
        corners: redondear esquinas del rectangulo
        stroke: para dar marco, aÃ±adimos propiedad color
        solid: color para el fondo-->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="50dip"/>
            <gradient
                android:type="radial"
                android:gradientRadius="170%p"
                android:endColor="@color/color_RollinDarkGreen"
                android:startColor="@color/color_RollinLightGreen"
                />
        </shape>
    </item>
</selector>