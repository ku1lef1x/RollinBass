<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light_green"
    tools:context=".RollinActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    android:scrollbarSize="5dp"
    android:scrollbarStyle="insideInset"
    android:fadeScrollbars="true"
    android:scrollbarFadeDuration="500">
    <RelativeLayout
        android:id="@+id/rlRollinPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRollin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:contentDescription="@string/logo_description"
            android:focusable="true"
            android:src="@drawable/png_logo_rollin_pegatina"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llRollinPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ivRollin"
            android:layout_marginTop="-20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLogos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_rectangle_rounded_green"
                android:drawableTop="@drawable/ic_identidad"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/identidad"
                android:textAllCaps="false"
                android:textColor="@color/color_RollinWhite" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEventos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_rectangle_rounded_green"
                android:drawableTop="@drawable/ic_eventos"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/eventos"
                android:textAllCaps="false"
                android:textColor="@color/color_RollinWhite" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDjs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_rectangle_rounded_green"
                android:drawableTop="@drawable/ic_djs"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/artistas"
                android:textAllCaps="false"
                android:textColor="@color/color_RollinWhite" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFamilia"
            android:layout_width="380dp"
            android:layout_height="175dp"
            android:layout_below="@+id/llRollinPage"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:contentDescription="@string/foto_familia"
            android:focusable="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRollinHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivFamilia"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="@string/rollin_history"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_RollinDarkGreen"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llRedesSociales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvRollinHistory"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector_highlight_darkpink"
                android:src="@drawable/ic_instagram"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector_highlight_darkpink"
                android:src="@drawable/ic_facebook"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector_highlight_darkpink"
                android:src="@drawable/ic_youtube"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivSoundCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector_highlight_darkpink"
                android:src="@drawable/ic_soundcloud"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSugerencias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/llRedesSociales"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:text="@string/sugerencia"
            android:textColor="@color/color_RollinDarkGreen"
            android:gravity="center"
            android:fontFamily="casual"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"
            android:background="@drawable/btn_selector_highlight_lightgreen"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>