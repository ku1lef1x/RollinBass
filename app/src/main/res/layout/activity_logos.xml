<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogosActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background_light_green"
    android:scrollbars="vertical"
    android:scrollbarSize="5dp"
    android:scrollbarStyle="insideInset"
    android:fadeScrollbars="true"
    android:scrollbarFadeDuration="500">

    <LinearLayout
        android:id="@+id/llLogos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRollin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            android:contentDescription="@string/logo_description"
            android:focusable="true"
            android:src="@drawable/png_logo_rollin_pegatina"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIntroLogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            android:text="@string/intro_logos"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_RollinDarkGreen"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/llBellota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TableRow>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvBellota"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="20dp"
                    android:text="@string/texto_bellota"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_RollinDarkGreen"
                    android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivBellota"
                android:layout_column="1"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:contentDescription="@string/logo_bellota"
                android:src="@drawable/png_beyota_pegatina" />
            </TableRow>

            <TableRow>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAbubilla"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="20dp"
                    android:text="@string/texto_abubilla"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_RollinDarkGreen"
                    android:textStyle="bold" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivAbubilla"
                    android:layout_column="1"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/logo_abubilla"
                    android:src="@drawable/png_bubilla_pegatina" />
            </TableRow>

            <TableRow>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEncina"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="20dp"
                    android:text="@string/texto_encina"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_RollinDarkGreen"
                    android:textStyle="bold" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivEncina"
                    android:layout_column="1"
                    android:layout_width="80dp"
                    android:layout_height="125dp"
                    android:contentDescription="@string/logo_encina"
                    android:src="@drawable/png_encina_pegatina" />
            </TableRow>
        </TableLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPiePaginaLogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            android:text="@string/pie_logos"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_RollinDarkGreen"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/llRedesSociales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp">
            <TableRow>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivIgRollinBass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/ig_rollinBass"
                android:src="@drawable/ic_instagram"
                android:background="@drawable/btn_selector_highlight_darkpink"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvIgRollinBass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="10dp"
                android:text="@string/ig_rollinBass"
                android:textStyle="italic"
                android:textColor="@color/color_RollinDarkGreen"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector_highlight_lightpink"/>
            </TableRow>
            <TableRow>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivIgGloevolutionsoccer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/ig_gloevolutionsoccer"
                    android:src="@drawable/ic_instagram"
                    android:background="@drawable/btn_selector_highlight_darkpink"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIgGloevolutionsoccer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/ig_gloevolutionsoccer"
                    android:textStyle="italic"
                    android:textColor="@color/color_RollinDarkGreen"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/btn_selector_highlight_lightpink"/>
            </TableRow>
            <TableRow>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivIgDrty_dsgn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/ig_drty.dsgn"
                    android:src="@drawable/ic_instagram"
                    android:background="@drawable/btn_selector_highlight_darkpink"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIgDrty.dsgn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/ig_drty.dsgn"
                    android:textStyle="italic"
                    android:textColor="@color/color_RollinDarkGreen"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/btn_selector_highlight_lightpink"/>
            </TableRow>



        </TableLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>